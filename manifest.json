{
    "manifest_version": 3,
    "name": "Sniper",
    "version": "0.0.1",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "media/background.mp3"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "storage",
        "sidePanel",
        "scripting"
    ],
    "side_panel": {
        "default_path": "popup/popup.html"
    },
    "action": {
        "default_popup": "popup/popup.html"
    }
}